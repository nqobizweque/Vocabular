<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:paddingLeft="10dp"
              android:paddingRight="10dp">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Term"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/txtTerm" android:textSize="24sp"
                android:textStyle="bold|italic" android:layout_weight=".8"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2" android:gravity="right" android:weightSum="1">
            <ImageView
                    android:src="@drawable/popup"
                    android:layout_width="match_parent"
                    android:id="@+id/ivPopMenu"
                    android:layout_height="15dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:text="term definition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtDefinition"/>
    <TextView
            android:text="Synonyms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtSynonymLabel" android:textStyle="bold|italic"
            android:visibility="gone"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtSynonyms" android:text="synonym, synonym "
            android:visibility="gone"/>
    <TextView
            android:text="Antonyms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textStyle="bold|italic"
            android:id="@+id/txtAntonymLabel" android:visibility="gone"/>
    <TextView
            android:text="antonym, antonym "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtAntonyms" android:visibility="gone"/>
</LinearLayout>